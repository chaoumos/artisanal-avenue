---
import Layout from '../layouts/Layout.astro';

const siteTitle = "Artisanal Avenue: Where Craft Meets Community";
const siteDescription = "Discover handcrafted treasures and connect with talented artisans. Unique gifts, home decor, and wearable art made with passion.";
---

<Layout title={siteTitle} description={siteDescription}>
	<section class="hero text-center mb-12">
		<h1 class="text-4xl font-bold text-primary mb-4">Welcome to Artisanal Avenue</h1>
		<p class="text-lg text-gray-700 mb-8">Discover handcrafted treasures and connect with talented artisans. We're a marketplace for unique, ethically sourced items.</p>
		<img src="https://placehold.co/800x400.png" alt="A placeholder image" class="rounded-lg shadow-md mx-auto" data-ai-hint="pottery crafts"/>
	</section>

	<section class="featured-products">
		<h2 class="text-2xl font-semibold text-secondary mb-4">Featured Products</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<div class="product-card bg-white rounded-lg shadow-md p-4">
				<img src="https://placehold.co/400x300.png" alt="Product 1" class="mb-2 rounded-md" data-ai-hint="handwoven scarf"/>
				<h3 class="text-xl font-medium text-gray-800">Handwoven Scarf</h3>
				<p class="text-gray-600">A beautiful, soft scarf made with natural fibers.</p>
				<p class="text-primary font-semibold">$45.00</p>
				<a href="#" class="inline-block mt-2 bg-accent text-white py-2 px-4 rounded hover:bg-primary">View Product</a>
			</div>
			<div class="product-card bg-white rounded-lg shadow-md p-4">
				<img src="https://placehold.co/400x300.png" alt="Product 2" class="mb-2 rounded-md" data-ai-hint="ceramic mug"/>
				<h3 class="text-xl font-medium text-gray-800">Hand-Painted Ceramic Mug</h3>
				<p class="text-gray-600">A unique ceramic mug, hand-painted with intricate designs.</p>
				<p class="text-primary font-semibold">$28.00</p>
				<a href="#" class="inline-block mt-2 bg-accent text-white py-2 px-4 rounded hover:bg-primary">View Product</a>
			</div>
			<div class="product-card bg-white rounded-lg shadow-md p-4">
				<img src="https://placehold.co/400x300.png" alt="Product 3" class="mb-2 rounded-md" data-ai-hint="leather journal"/>
				<h3 class="text-xl font-medium text-gray-800">Hand-Tooled Leather Journal</h3>
				<p class="text-gray-600">A beautifully crafted leather journal for your thoughts and dreams.</p>
				<p class="text-primary font-semibold">$55.00</p>
				<a href="#" class="inline-block mt-2 bg-accent text-white py-2 px-4 rounded hover:bg-primary">View Product</a>
			</div>
		</div>
	</section>
</Layout>