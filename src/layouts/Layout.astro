---
interface Props {
	title?: string;
	description?: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
const site = "Artisanal Avenue: Where Craft Meets Community";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content={Astro.props.description}>
		<meta name="author" content={site}>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title || `${"Artisanal Avenue: Where Craft Meets Community"}`}</title>
	</head>
	<body class="bg-gray-100">
		<div class="container mx-auto px-4 py-8">
			<header class="flex justify-between items-center mb-8">
				<a href="/" class="text-2xl font-bold text-primary">Artisanal Avenue</a>
				<nav>
					<ul class="flex space-x-4">
						<li><a href="/" class="hover:text-secondary">Home</a></li>
						<li><a href="/blog" class="hover:text-secondary">Blog</a></li>
						<li><a href="#" class="hover:text-secondary">Products</a></li>
						<li><a href="#" class="hover:text-secondary">Artists</a></li>
					</ul>
				</nav>
			</header>
			<main>
				<slot />
			</main>
			<footer class="mt-12 py-4 text-center text-gray-600 border-t">
				Â© {new Date().getFullYear()} Artisanal Avenue: Where Craft Meets Community
			</footer>
		</div>
	</body>
</html>
