---
import Layout from '../layouts/Layout.astro';
import { format } from 'date-fns';

interface Props {
  title: string;
  description: string;
  pubDate: string;
  heroImage?: string;
  heroImageAlt?: string;
}

const { title, description, pubDate, heroImage, heroImageAlt } = Astro.props;

const formattedDate = format(new Date(pubDate), 'MMMM dd, yyyy');
---

<Layout title={title} description={description}>
  <article class="prose lg:prose-xl mx-auto py-8">
    <h1 class="text-3xl font-bold text-primary mb-4">{title}</h1>
    <p class="text-gray-600 mb-2">Published: {formattedDate}</p>
    <p class="text-gray-700 mb-4">{description}</p>

    {heroImage && <img src={heroImage} alt={heroImageAlt} class="rounded-lg shadow-md mb-6" />}

    <slot />
  </article>
</Layout>
